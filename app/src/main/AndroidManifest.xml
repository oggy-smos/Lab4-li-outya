<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myprojest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main Activity (app starts here) -->
        <activity
            android:name=".Activitymain"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Expense Activity -->
        <activity android:name=".AddExpenseActivity" android:exported="true" />

        <!-- Expense Detail Activity -->
        <activity android:name=".ExpenseDetailActivity" android:exported="true" />

    </application>

</manifest>
